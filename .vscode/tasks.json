    "version": "2.0.0",
    "echoCommand": true,
    "tasks": [
        { 
            "label": "build",
            "command": "nvcc",
            "args": ["--gpu-architecture=sm_50",
                "-o", "bin/SIPAG.exe",
                
                "-Isrc/.",
                "src/CudaControler.cu",
                "-x", "cu",
                "src/SIPAG.cpp", "src/Console.cpp", "src/Render.cpp", "src/Simulation.cpp", "src/OClock.cpp",
                "-Iinclude/",
                "-Isrc/shaders/.",
                //"-lkernel32", 
                //"-lgdi32",  
                //"-luser32", 
                "-Llib/GL", 
                "-lglew32",
                "-lfreeglut" , 
                "-lglu32", 
                "-lopengl32",
                "-lSOIL"
                //"-lglui32"
                //"-lntdll",
                //"-lshell32"
            ],
                "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run",
            "command": "./bin/SIPAG.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
